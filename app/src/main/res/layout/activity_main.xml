<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/casa" android:id="@+id/imageView"
            android:layout_marginBottom="10dp"
            android:layout_alignParentEnd="false" android:layout_alignParentTop="false"
            android:layout_alignParentStart="false"
            android:layout_height="wrap_content" android:adjustViewBounds="true" android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:layout_above="@+id/textView"/>
    <TextView
            android:text="Casa dos Fulanos"
            android:layout_width="match_parent"
            android:id="@+id/textView"
            android:textSize="52dp" android:fontFamily="cursive"
            android:layout_height="wrap_content"
            android:gravity="center" android:textStyle="bold"
            android:layout_above="@+id/editText3" android:layout_marginRight="10dp" android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText3" android:hint="UsuÃ¡rio"
            android:layout_marginRight="10dp" android:layout_marginLeft="10dp" android:layout_marginBottom="10dp"
            android:textSize="36sp" android:layout_above="@+id/editText2"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2" android:layout_above="@+id/button" android:hint="Senha"
            android:layout_marginRight="10dp" android:layout_marginLeft="10dp" android:layout_marginBottom="10dp"
            android:textSize="36sp"/>
    <Button
            android:text="Entrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button" android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:textSize="36sp" android:onClick="clickClickMeButton"/>

</RelativeLayout>